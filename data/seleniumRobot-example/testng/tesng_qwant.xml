<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://beust.com/testng/testng-1.0.dtd" >
<suite name="Qwant Essai Suite" parallel="methods" verbose="1" thread-count="5">
    <listeners>
        <listener class-name="com.seleniumtests.reporter.SeleniumTestsReporter" />
        <listener class-name="com.seleniumtests.core.TestRetryListener" />
    </listeners>
    
    <!-- on écrit les paramètres qui lancent la page web et définissent l'environnement du test -->
    <parameter name="appURL" value="https://www.qwant.fr"/>
    <parameter name="browser" value="*chrome" />
    <parameter name="softAssertEnabled" value="true" />
	<parameter name="cucumberPackage" value="com.infotel.seleniumTests.qwantTest" />
	
	<!-- On écrit un test en particulier sur l'environnement défini -->
	<test name="testUn">
    	<parameter name="cucumberTests" value="Qwant" />
	    <parameter name="cucumberTags" value="" />
	    
        <packages>
            <package name="com.seleniumtests.core.runner.*"/>
        </packages>
    </test>
	
</suite>